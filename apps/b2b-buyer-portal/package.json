{
  "name": "b2b-buyer-portal",
  "version": "2.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter storefront run build",
    "build:production": "pnpm --recursive run build",
    "build:staging": "pnpm --recursive run build:staging",
    "build:staging-atx": "pnpm --recursive run build:staging",
    "build:tier1": "pnpm --recursive run build:tier1",
    "dev": "pnpm --recursive --parallel run dev",
    "lint": "pnpm --recursive --parallel run lint --continue",
    "format": "pnpm --recursive --parallel run format --continue",
    "test": "pnpm --recursive --parallel run test",
    "clean": "yarn run clean:node-modules",
    "clean:node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-b2b": "*",
    "patch-package": "^8.0.0",
    "prettier": "^2.8.8"
  },
  "engines": {
    "node": ">=22.16.0"
  }
}
